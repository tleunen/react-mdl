{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
        "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
        "comma-dangle": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-const-assign": 2,
        "space-after-keywords": 0,

        "react/prop-types": [2, { "ignore": ["children"] }],
        "react/no-multi-comp": [2, { "ignoreStateless": true }]
    },
    "globals": {
        "componentHandler": true,
        "Prism": true
    }
}
